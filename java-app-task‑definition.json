{
  "family": "java-web-application",
  "cpu": "{{CPU}}",
  "memory": "{{MEMORY}}",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::482387069884:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "java-web-application",
      "image": "ghcr.io/harish9395/java-web-application:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "CONFIG_URL",
          "value": "http://localhost:2772/applications/my-app/environments/dev/configurations/app-settings"
        }
      ]
    },
    {
      "name": "appconfig-agent",
      "image": "public.ecr.aws/aws-appconfig/aws-appconfig-agent:latest",
      "essential": false,
      "memory": 128,
      "cpu": 128,
      "environment": [
        { "name": "APPCONFIG_APPLICATION", "value": "my-app" },
        { "name": "APPCONFIG_ENVIRONMENT", "value": "dev" },
        { "name": "APPCONFIG_CONFIGURATION", "value": "app-settings" },
        { "name": "APPCONFIG_POLL_INTERVAL_SECONDS", "value": "5" },
        { "name": "AWS_REGION", "value": "us-east-2" }
      ],
      "portMappings": [
        {
          "containerPort": 2772,
          "hostPort": 2772
        }
      ]
    }
  ]
}
